	<TextView android:id="@+id/conversation_message_list_msg_text"
	android:layout_height="match_parent"
	android:layout_width="fill_parent"
	android:textSize="20dip"/>
	<TextView android:id="@+id/conversation_message_list_time_text"
	android:layout_height="match_parent"
	android:layout_width="fill_parent"
	android:textSize="10dip"/>
</LinearLayout>